---
import Section from '@/components/ui-wrappers/section.astro';
import Card from '@/components/ui-wrappers/card.astro';
import { ContactUsForm } from './components/contactUsForm';
import Star from '@/assets/svg/star-4.svg';
import StarMany from '@/assets/svg/star-many.svg';
---

<Section title='Contact Us' text="Connect with Us: Let's Discuss Your Digital Marketing Needs">
  <Card bg='neutral'>
    <div class='relative flex justify-between overflow-hidden'>
      <ContactUsForm client:load />
      <div
        class='576:block 1100:relative 1100:w-[368px] 1100:top-0 1100:h-auto absolute top-[-100px] right-0 hidden h-full w-[320px] shrink-0'
        aria-hidden='true'
      >
        <Star class='text-dark absolute top-[224px] left-[46px] z-1 size-[47%] rotate-[45deg]' />
        <Star class='text-accent absolute bottom-[144px] size-[27%] rotate-[45deg]' />
        <StarMany
          class='absolute top-[50%] left-[42px] size-[180%] translate-y-[-50%] text-black'
        />
      </div>
    </div>
  </Card>
</Section>
